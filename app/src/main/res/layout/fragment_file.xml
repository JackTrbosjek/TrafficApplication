<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/MyCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_preview"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            app:srcCompat="@android:drawable/presence_video_online" />

        <TextView
            android:id="@+id/item_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_preview"
            android:layout_toLeftOf="@+id/item_sync"
            android:layout_toRightOf="@+id/item_preview"
            android:text="TextView" />

        <TextView
            android:id="@+id/item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_date_created"
            android:layout_toEndOf="@+id/item_preview"
            android:layout_toRightOf="@+id/item_preview"
            android:text="TextView" />

        <TextView
            android:id="@+id/item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_location"
            android:layout_toEndOf="@+id/item_preview"
            android:layout_toRightOf="@+id/item_preview"
            android:text="TextView" />

        <TextView
            android:id="@+id/item_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/item_type"
            android:layout_toRightOf="@+id/item_preview"
            android:layout_toEndOf="@+id/item_preview" />

        <ImageButton
            android:id="@+id/item_button_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_more_dots" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

